<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="1"
        android:entries="@array/pref_bacon_list_titles"
        android:entryValues="@array/pref_bacon_list_values"
        android:key="meat_type"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/list_bacon_type" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="start_lorem_ipsum"
        android:summaryOff="No"
        android:summaryOn="Yes"
        android:switchTextOff="No"
        android:switchTextOn="Yes"
        android:title="@string/start_lorem_ipsum" />
    <EditTextPreference
        android:defaultValue="5"
        android:inputType="number"
        android:key="bacon_paras"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="The amount of paragraphs the api will retrieve"
        android:title="@string/prf_amount_paras" />

</PreferenceScreen>